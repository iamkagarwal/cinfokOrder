<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Order Number 1"
        android:id="@+id/orderNo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 1000.00"
        android:textSize="17dp"
        android:id="@+id/totalPriceOrder"
        android:layout_alignBottom="@+id/orderNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/orderedItems"
        android:textColor="@color/black"

        android:text="2 rice, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal, 20 dal"
        android:layout_below="@+id/orderNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>