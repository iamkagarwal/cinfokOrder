<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView2">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cartList">

        </ListView>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 000"
        android:textSize="12dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/subtotal"
        android:layout_below="@+id/scrollView2"
        android:layout_alignLeft="@+id/sgst"
        android:layout_alignStart="@+id/sgst" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Subtotal"
    android:textColor="@color/black"
    android:textSize="12dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/scrollView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 00"
        android:textSize="12dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/sgst"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/cgst"
        android:layout_alignStart="@+id/cgst" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 00"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/delivery_charge"
        android:layout_alignStart="@+id/delivery_charge"
        android:id="@+id/cgst" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SGST:"
        android:textSize="15dp"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView4"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 00"
        android:textSize="12dp"
        android:id="@+id/delivery_charge"
        android:layout_alignBaseline="@+id/textView5"
        android:textColor="@color/colorAccent"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/totalCart"
        android:layout_alignStart="@+id/totalCart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGST:(6%)"
        android:textSize="15dp"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 00"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/totalCart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Charge:"
        android:textSize="15dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView4"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL:"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="ENTER PROMO CODE"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:textColor="@color/black"
        android:layout_marginTop="22dp"

        android:id="@+id/promoText" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:layout_alignTop="@+id/promoText"
        android:layout_toRightOf="@+id/promoText"
        android:layout_toEndOf="@+id/promoText"
        android:id="@+id/enterPromo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Items in Cart"
        android:textSize="20dp"
        android:id="@+id/textForNoItems"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
<Button
    android:id="@+id/confirmorder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Confirm Order"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:background="@color/colorPrimary"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
</RelativeLayout>